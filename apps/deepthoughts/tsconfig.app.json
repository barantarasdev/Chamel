{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "declaration": true,
    "emitDecoratorMetadata": true,
    "composite": true,
    "esModuleInterop": true
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": [
    "src/**/*.ts",
    "../../libs/core/src/**/*.ts",
    "../../libs/validation/src/**/*.ts"
  ]
}
